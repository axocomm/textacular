<project name="textacular" default="run" basedir=".">
    <description>Build file for TeXtacular</description>
    <property name="src" location="src"/>
    <property name="build" location="bin"/>
    <property name="dist" location="dist"/>

    <target name="init">
        <tstamp/>
        <mkdir dir="${build}"/>
    </target>

    <target name="compile" depends="init">
        <javac srcdir="${src}" destdir="${build}"/>
    </target>

    <target name="run" depends="compile">
        <java classname="edu.drexel.tm.cs338.textacular.Main">
            <classpath>
                <pathelement location="${build}"/>
            </classpath>
        </java>
    </target>
</project>
